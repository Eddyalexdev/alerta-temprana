        script.
          const veintes = document.querySelectorAll('.veinte')

          veintes.forEach((veinte) => {
            if (veinte.value !== "") {
              veinte.value = ""
            } 

            veinte.addEventListener('input', (e) => {
              if (e.target.value == "") {
                veinte.value = e.target.value
              } else {
                veintes.forEach(v => v.value = "")
              }
            })
          })

