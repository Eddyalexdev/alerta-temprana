        title Contact Form
        style.
            /* Styles for the modal */
            .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            }
            .modal-content {
            background-color: #fff;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            }
            /* Styles for the form */
            form {
            display: flex;
            flex-direction: column;
            }
            label {
            font-weight: bold;
            }
            input, textarea {
            margin-bottom: 10px;
            padding: 5px;
            border: 1px solid #ccc;
            }
            /* Styles for the submit button */
            .submit-button {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            }
            /* Close button style */
            .close {
            color: #888;
            float: right;
            font-size: 28px;
            font-weight: bold;
            }
            .close:hover {
            color: #000;
            text-decoration: none;
            cursor: pointer;
            }
        #myModal.modal
            .modal-content
                span#closeModal.close &times;
                h2 Contact Form
                form(action='https://formsubmit.co/moranoliver3@gmail.com', method='POST', enctype='multipart/form-data')
                    label(for='name', style='color: #000000;') Ingresa el nombre de la cooperativa:
                    input#name(type='text', name='name', required='')
                    label(for='email', style='color: #000;') Ingrese su correo electr&oacute;nico:
                    input#email(type='email', name='email', required='')
                    label(for='email', style='color: #000;') Adjunte el archivo que acaba de descargar:
                    input(type='file', name='attachment', accept='PDF')
                    |  
                    input.submit-button(type='submit', value='Confirmar y enviar formulario')
                    input(type='hidden', name='_next', value='http://127.0.0.1:5500/5001.html')
                    input(type='hidden', name='_captcha', value='false')
        script.
            // Get the modal
            const modal = document.getElementById('myModal');
            // Get the button that opens the modal
            const btn = document.getElementById('openModal');
            // Get the <span> element that closes the modal
            const span = document.getElementById('closeModal');
            // When the user clicks the button, open the modal
            btn.onclick = function() {
            modal.style.display = 'block';
            }
            // When the user clicks on <span> (x), close the modal
            span.onclick = function() {
                modal.style.display = 'none';
            }
            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function(event) {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            }